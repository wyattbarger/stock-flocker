<section class="section">
  <div class="container">
    <h1 class="title">Login to Stock Flocker</h1>
    <form action="/login" method="post" class="box">
      <div class="field">
        <label class="label" for="username">Username</label>
        <div class="control">
          <input class="input" type="text" id="username" name="username" required>
        </div>
      </div>
      <div class="field">
        <label class="label" for="password">Password</label>
        <div class="control">
          <input class="input" type="password" id="password" name="password" required>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-link">Log In</button>
        </div>
      </div>
    </form>
  </div>
</section>

<script src="../public/js/login.js"></script> {{! Added a script element to link the login.js file to allow the user to successfully complete the post request and log in. }}
